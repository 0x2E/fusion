# Database Configuration
# SQLite (default)
REEDME_DB_PATH=reedme.db

# PostgreSQL (mutually exclusive with REEDME_DB_PATH)
# When set, PostgreSQL is used and REEDME_DB_PATH is ignored.
# REEDME_DATABASE_URL=postgres://user:password@localhost:5432/reedme?sslmode=disable

# Authentication
REEDME_PASSWORD=changeme
# Explicitly allow empty password (not recommended)
# REEDME_ALLOW_EMPTY_PASSWORD=false

# Server Configuration
REEDME_PORT=8080

# CORS allowed origins (comma-separated, empty means allow all)
# Example: REEDME_CORS_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com
# REEDME_CORS_ALLOWED_ORIGINS=

# Allow pulling private/localhost feed URLs (default: false)
# REEDME_ALLOW_PRIVATE_FEEDS=false

# Feed Pull Service Configuration
# Pull interval in seconds (default: 1800 = 30 minutes)
REEDME_PULL_INTERVAL=1800

# Request timeout in seconds (default: 30)
REEDME_PULL_TIMEOUT=30

# Maximum concurrent pulls (default: 10)
REEDME_PULL_CONCURRENCY=10

# Global max scheduling delay in seconds (default: 172800 = 48 hours)
REEDME_PULL_MAX_BACKOFF=172800

# Login rate limiting
# Max failed attempts per window (default: 10)
REEDME_LOGIN_RATE_LIMIT=10
# Window size in seconds (default: 60)
REEDME_LOGIN_WINDOW=60
# Block duration in seconds after limit is exceeded (default: 300)
REEDME_LOGIN_BLOCK=300

# Logging Configuration
# Log level: DEBUG, INFO, WARN, ERROR (default: INFO)
REEDME_LOG_LEVEL=INFO

# Log format: text, json, auto (default: auto)
REEDME_LOG_FORMAT=auto

# OIDC Configuration (optional, enables SSO login when issuer is set)
# OIDC provider URL (e.g., https://auth.example.com/realms/main)
# REEDME_OIDC_ISSUER=

# OAuth2 client ID and secret from your OIDC provider
# REEDME_OIDC_CLIENT_ID=
# REEDME_OIDC_CLIENT_SECRET=

# Callback URL (required when OIDC issuer is configured)
# REEDME_OIDC_REDIRECT_URI=

# Restrict login to a specific user identity (email or subject claim, optional)
# REEDME_OIDC_ALLOWED_USER=
